<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>br.com.devcase.dwf</groupId>
	<artifactId>dwf</artifactId>
	<version>2.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Dwf</name>
	<description>Devcase Web Framework</description>
	<modules>
		<module>dwf-data</module>
		<module>dwf-commons</module>
		<module>dwf-user</module>
		<module>dwf-crud</module>
		<module>dwf-web-view</module>
		<module>dwf-tools</module>
	</modules>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<spring.version>4.1.4.RELEASE</spring.version>
		<spring-security.version>3.2.5.RELEASE</spring-security.version>
		<spring-boot.version>1.2.1.RELEASE</spring-boot.version>
		<tomcat.version>8.0.15</tomcat.version>
	</properties>
	<!-- see configuration instructions (settings.xml): https://github.com/spring-projects/aws-maven -->
	<distributionManagement>
		<repository>
			<id>devcase-repo</id>
			<name>Devcase Repository S3 Bucket</name>
			<url>s3://devcase-repo/release</url>
		</repository>
		<snapshotRepository>
			<id>devcase-repo-snapshots</id>
			<name>Devcase Repository S3 Bucket</name>
			<url>s3://devcase-repo/snapshot</url>
		</snapshotRepository>
	</distributionManagement>
	<repositories>
		<repository>
			<id>devcase-repo</id>
			<name>Devcase Repository S3 Bucket</name>
			<url>s3://devcase-repo/release</url>
		</repository>
	</repositories>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
		</plugins>
		<extensions>
			<extension>
				<groupId>org.springframework.build</groupId>
				<artifactId>aws-maven</artifactId>
				<version>5.0.0.RELEASE</version>
			</extension>
		</extensions>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.1</version>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-collections4</artifactId>
			<version>4.0</version>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-autoconfigure</artifactId>
			<version>${spring-boot.version}</version>
		</dependency>
	</dependencies>
</project>